{
  "name": "formalyon-crm",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "dev:api": "turbo dev --filter=@formalyon/api",
    "dev:web": "turbo dev --filter=@formalyon/web",
    "db:generate": "pnpm --filter @formalyon/database db:generate",
    "db:migrate": "pnpm --filter @formalyon/database db:migrate",
    "db:push": "pnpm --filter @formalyon/database db:push",
    "db:studio": "pnpm --filter @formalyon/database db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
